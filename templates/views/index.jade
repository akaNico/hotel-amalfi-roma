extends ../layouts/homepage

block header
	#header.header
		.background
			div(style="background-image:url('" + data.page._.headerImage.fit(2000,1000) + "')" )
				.background-filter
					.header-content
						.header-row-logo
							.header-logo
								a(href='/'): img.img-responsive(src='/images/logo-white.png')
						.header-row-title
							.header-title.text-center
								h1.text-uppercase #{data.page.title}
								.container-fluid
									.row
										.col-xs-5.col-sm-5.col-md-5.col-lg-5
										.col-xs-2.col-sm-2.col-md-2.col-lg-2
										.col-xs-5.col-sm-5.col-md-5.col-lg-5
								h2.text-uppercase #{data.page.subTitle}
		//-- end header

block content
	.container-fluid
		.control-group &nbsp;
		.row
			.col-xs-12.col-sm-12.col-md-12.col-lg-6.col-xs-push-0.col-sm-push-0.col-md-push-0.col-lg-push-6
				.row
					.col-xs-12.col-sm-12.col-md-12.col-lg-12.text-center.rectangle-container
						h3.text-uppercase  #{data.page.home.textBlockTitle}
						h4.text-uppercase.second-color  #{data.page.home.textBlockSubTitle}
						!= data.page.home.textBlockContent
				.row
					.col-xs-12.col-sm-12.col-md-6.col-lg-6
						.square-box
							.square-content(style="background-image:url('"+ data.page._.home.linkBlock2Image.fit(500,500) +"')")
								div
								a(href=data.page.home.linkBlock2Url)
									span.h2.text-uppercase #{data.page.home.linkBlock2Text}
					.col-xs-12.col-sm-12.col-md-6.col-lg-6
						.hidden-md.hidden-lg.control-group &nbsp;
						.square-box
							.square-content(style="background-image:url('"+ data.page._.home.linkBlock3Image.fit(500,500) +"')")
								div
								a(href=data.page.home.linkBlock3Url)
									span.h2.text-uppercase #{data.page.home.linkBlock3Text}
					.control-group &nbsp;
			.col-xs-12.col-sm-12.col-md-12.col-lg-6.col-xs-pull-0.col-sm-pull-0.col-md-pull-0.col-lg-pull-6
				.square-box
					.square-content(style="background-image:url('"+ data.page._.home.linkBlock1Image.fit(1000,1000) +"')")
						div
						a(href=data.page.home.linkBlock1Url)
							span.h2.text-uppercase #{data.page.home.linkBlock1Text}
		//-- end squared boxes

		if data.events
			.control-group &nbsp;
			.row
				.col-xs-12.col-sm-12.col-md-12.col-lg-12
					h3.text-uppercase.text-center #{data.page.home.eventsBlockTitle}
					h4.text-uppercase.second-color.text-center #{data.page.home.eventsBlockSubTitle}
					.control-group &nbsp;
					.row
						.col-xs-2.col-sm-2.col-md-2.col-lg-2
						.col-xs-8.col-sm-8.col-md-8.col-lg-8
							.row
								each event in data.events
									.col-xs-6.col-sm-6.col-md-4.col-lg-4
										.square-box.event-item
											a.square-content(href='/blog/'+event.slug)
												span.event-content-table
													span.event-content-cell
														span.event-icon(class=event.event.icon)
														span.event-title.text-uppercase.text-center= event.title
														span.event-date.text-uppercase.text-center= event._.publishedDate.format('DD MMMM YYYY')
						.col-xs-2.col-sm-2.col-md-2.col-lg-2
			//-- end events

		.control-group &nbsp;
		.container-newsletter
			.control-group &nbsp;
			h3.text-uppercase.text-center #{data.page.home.newsletterBlockTitle}
			h4.text-uppercase.second-color.text-center #{data.page.home.newsletterBlockSubTitle}
			.control-group &nbsp;
			form.form-inline.text-center.col-xs-12.col-sm-12.col-md-12.col-lg-12
				.form-group
					label.sr-only.text-uppercase(for='newsletteremail') #{__('NewsletterLabel')}
					input#newsletteremail.form-control(type='email', placeholder=__('NewsletterInput'))
					button.btn.btn-default.text-uppercase(type='submit') #{__('NewsletterIscriviti')}
			.control-group &nbsp;
			.control-group &nbsp;
		//-- end newsletter
		
	if data.tours
		.control-group &nbsp;
		.container-fluid
			.row
				.col-xs-12.col-sm-12.col-md-12.col-lg-12
					.container-fluid
						.row
							each tour in data.tours
								.col-xs-12.col-sm-4.col-md-4.col-lg-4
									.hidden-sm.hidden-md.hidden-lg.control-group &nbsp;
									.tour-item
										.tour-item-content
											div(style='background-image: url('+tour._.heroImage.limit(680,680)+');')
											a(href='/tours/'+tour.slug)
												h3.tour-subtitle.text-uppercase.text-center
													span= tour.categories.name
												h2.tour-title.text-uppercase.text-center
													span= tour.location
				.control-group &nbsp;
		//-- end tours


	if data.testimonials
		.testimonials
			.testimonials-background
				.testimonials-background-filter
					.testimonials-content
						.control-group &nbsp;
						.control-group &nbsp;
						h3.text-uppercase.text-center #{data.page.home.testimonialsBlockTitle}
						h4.text-uppercase.second-color.text-center #{data.page.home.testimonialsBlockSubTitle}
						.control-group &nbsp;
						.text-center.separator &ldquo;
						each testimonial in data.testimonials
							.testimonials-item
								p.text-center.text-uppercase= testimonial.name
								.text-center.text-uppercase!= testimonial.description
								.control-group &nbsp;
								p.text-center.text-uppercase= testimonial.author
							.control-group &nbsp;
							ul.testimonials-nav
								li(class=testimonial.icon)
									| &nbsp;
						.control-group &nbsp;
		//-- end testimonials

	.control-group &nbsp;
	.pre-footer
		.container-fluid
			.row
				.col-xs-12.col-sm-12.col-md-12.col-lg-12
					.control-group &nbsp;
					.control-group &nbsp;
					.row
						.col-xs-2.col-sm-2.col-md-2.col-lg-2
						.col-xs-8.col-sm-8.col-md-8.col-lg-8
							.row
								.col-xs-12.col-sm-4.col-md-4.col-lg-4.text-center
									img(src=data.page.home.promoColumn1Image.url)
									h4 #{data.page.home.promoColumn1Title}
									p #{data.page.home.promoColumn1Text}
								.col-xs-12.col-sm-4.col-md-4.col-lg-4.text-center
									img(src=data.page.home.promoColumn2Image.url)
									h4 #{data.page.home.promoColumn2Title}
									p #{data.page.home.promoColumn2Text}
								.col-xs-12.col-sm-4.col-md-4.col-lg-4.text-center
									img(src=data.page.home.promoColumn3Image.url)
									h4 #{data.page.home.promoColumn3Title}
									p #{data.page.home.promoColumn3Text}
						.col-xs-2.col-sm-2.col-md-2.col-lg-2
					.control-group &nbsp;
					.control-group &nbsp;
	//-- end pre footer

	//-
		div(class="home")
			div(class="section")
				div(class="master-slider ms-skin-default", id="masterslider")
					div(class="ms-slide")
						img(src="js/plugins/masterslider/blank.gif", data-src="http://www.hoteldellapiccolamarina.it/imgs/slider/1.jpg")
					div(class="ms-slide")
						img(src="js/plugins/masterslider/blank.gif", data-src="http://www.hoteldellapiccolamarina.it/imgs/slider/2.jpg")

	//-
		block js
			script(type="text/javascript").
				jQuery(document).ready(function(){
					var slider = new MasterSlider();
					slider.control('arrows');
					slider.setup('masterslider' , {
						width:1280,    // slider standard width
						height: 540,   // slider standard height
						space:5,
						layout: 'fillwidth',
						autoplay: true,
						arrows: true,
						loop: true
						// more slider options goes here...
						// check slider options section in documentation for more options.
					});
				});
