extends ../layouts/homepage

block header
	#header.header
		.background
			div(style="background-image:url('" + data.page.headerImage.url + "')" )
				.background-filter
					.header-content
						.header-row-logo
							.header-logo
								a(href='/'+[getLocale(req)]+'/'): img.img-responsive(src='/images/logo-white.png')
						.header-row-title
							.header-title.text-center
								h1.text-uppercase #{data.page.title[getLocale(req)]}
								.container-fluid
									.row
										.col-xs-5.col-sm-5.col-md-5.col-lg-5
										.col-xs-2.col-sm-2.col-md-2.col-lg-2
										.col-xs-5.col-sm-5.col-md-5.col-lg-5
								h2.text-uppercase #{data.page.subTitle[getLocale(req)]}
		//-- end header

block content
	.container-fluid
		.control-group &nbsp;
		.row
			.col-xs-12.col-sm-12.col-md-12.col-lg-6.col-xs-push-0.col-sm-push-0.col-md-push-0.col-lg-push-6
				.row
					.col-xs-12.col-sm-12.col-md-12.col-lg-12.text-center.rectangle-container
						h3.text-uppercase  #{data.page.textBlockTitle[getLocale(req)]}
						h4.text-uppercase.second-color  #{data.page.textBlockSubTitle[getLocale(req)]}
						!= data.page.textBlockContent[getLocale(req)]
				.row
					.col-xs-12.col-sm-12.col-md-6.col-lg-6
						.square-box
							.square-content
								div(style="background-image:url('"+ data.page.linkBlock2Image.url +"')")
								a(href='/'+[getLocale(req)]+data.page.linkBlock2Url)
									span.h2.text-uppercase #{data.page.linkBlock2Text[getLocale(req)]}
					.col-xs-12.col-sm-12.col-md-6.col-lg-6
						.hidden-md.hidden-lg.control-group &nbsp;
						.square-box
							.square-content
								div(style="background-image:url('"+ data.page.linkBlock3Image.url +"')")
								a(href='/'+[getLocale(req)]+data.page.linkBlock3Url)
									span.h2.text-uppercase #{data.page.linkBlock3Text[getLocale(req)]}
					.control-group &nbsp;
			.col-xs-12.col-sm-12.col-md-12.col-lg-6.col-xs-pull-0.col-sm-pull-0.col-md-pull-0.col-lg-pull-6
				.square-box
					.square-content
						div(style="background-image:url('"+ data.page.linkBlock1Image.url +"')")
						a(href='/'+[getLocale(req)]+data.page.linkBlock1Url)
							span.h2.text-uppercase #{data.page.linkBlock1Text[getLocale(req)]}
		//-- end squared boxes

		if data.events
			.control-group &nbsp;
			.row
				.col-xs-12.col-sm-12.col-md-12.col-lg-12
					h3.text-uppercase.text-center #{data.page.eventsBlockTitle[getLocale(req)]}
					h4.text-uppercase.second-color.text-center #{data.page.eventsBlockSubTitle[getLocale(req)]}
					.control-group &nbsp;
					.row
						.col-xs-2.col-sm-2.col-md-2.col-lg-2
						.col-xs-8.col-sm-8.col-md-8.col-lg-8
							.row
								each event in data.events
									.col-xs-6.col-sm-6.col-md-4.col-lg-4
										.square-box.event-item
											a.square-content(href='/'+[getLocale(req)]+'/blog/post/'+event.slug)
												span.event-content-table
													span.event-content-cell
														span.event-icon(class=event.event.icon)
														span.event-title.text-uppercase.text-center= event.title
														span.event-date.text-uppercase.text-center= event._.publishedDate.format('DD MMMM YYYY')
						.col-xs-2.col-sm-2.col-md-2.col-lg-2
			//-- end events

		.control-group &nbsp;
		.container-newsletter
			.control-group &nbsp;
			h3.text-uppercase.text-center #{data.page.newsletterBlockTitle[getLocale(req)]}
			h4.text-uppercase.second-color.text-center #{data.page.newsletterBlockSubTitle[getLocale(req)]}
			.control-group &nbsp;
			form.form-inline.text-center.col-xs-12.col-sm-12.col-md-12.col-lg-12
				.form-group
					label.sr-only.text-uppercase(for='newsletteremail') #{__('NewsletterLabel')}
					input#newsletteremail.form-control(type='email', placeholder=__('NewsletterInput'))
					button.btn.btn-default.text-uppercase(type='submit') #{__('NewsletterIscriviti')}
			.control-group &nbsp;
			.control-group &nbsp;
		//-- end newsletter
		
	if data.tours
		.control-group &nbsp;
		.container-fluid
			.row
				.col-xs-12.col-sm-12.col-md-12.col-lg-12
					.container-fluid
						.row
							each tour in data.tours
								.col-xs-12.col-sm-4.col-md-4.col-lg-4
									.hidden-sm.hidden-md.hidden-lg.control-group &nbsp;
									.tour-item
										.tour-item-content
											div(style='background-image: url('+tour._.heroImage.limit(680,680)+');')
											a(href='/'+[getLocale(req)]+'/blog/post/'+tour.slug)
												h3.tour-subtitle.text-uppercase.text-center
													span= tour.categories.name
												h2.tour-title.text-uppercase.text-center
													span= tour.location
				.control-group &nbsp;
		//-- end tours


	if data.testimonials
		.testimonials
			.testimonials-background
				.testimonials-background-filter
					.testimonials-content
						.control-group &nbsp;
						.control-group &nbsp;
						h3.text-uppercase.text-center #{data.page.testimonialsBlockTitle[getLocale(req)]}
						h4.text-uppercase.second-color.text-center #{data.page.testimonialsBlockSubTitle[getLocale(req)]}
						.control-group &nbsp;
						.text-center.separator &ldquo;
						each testimonial in data.testimonials
							.testimonials-item
								p.text-center.text-uppercase= testimonial.name
								.text-center.text-uppercase!= testimonial.description
								.control-group &nbsp;
								p.text-center.text-uppercase= testimonial.author
							.control-group &nbsp;
							ul.testimonials-nav
								li(class=testimonial.icon)
									| &nbsp;
						.control-group &nbsp;
		//-- end testimonials

	.control-group &nbsp;
	.pre-footer
		.container-fluid
			.row
				.col-xs-12.col-sm-12.col-md-12.col-lg-12
					.control-group &nbsp;
					.control-group &nbsp;
					.row
						.col-xs-2.col-sm-2.col-md-2.col-lg-2
						.col-xs-8.col-sm-8.col-md-8.col-lg-8
							.row
								.col-xs-12.col-sm-4.col-md-4.col-lg-4.text-center
									img(src=data.page.promoColumn1Image.url)
									h4 #{data.page.promoColumn1Title[getLocale(req)]}
									p #{data.page.promoColumn1Text[getLocale(req)]}
								.col-xs-12.col-sm-4.col-md-4.col-lg-4.text-center
									img(src=data.page.promoColumn2Image.url)
									h4 #{data.page.promoColumn2Title[getLocale(req)]}
									p #{data.page.promoColumn2Text[getLocale(req)]}
								.col-xs-12.col-sm-4.col-md-4.col-lg-4.text-center
									img(src=data.page.promoColumn3Image.url)
									h4 #{data.page.promoColumn3Title[getLocale(req)]}
									p #{data.page.promoColumn3Text[getLocale(req)]}
						.col-xs-2.col-sm-2.col-md-2.col-lg-2
					.control-group &nbsp;
					.control-group &nbsp;
	//-- end pre footer
