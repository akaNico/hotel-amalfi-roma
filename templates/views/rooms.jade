		$(function () {
			$('[data-toggle="tooltip"]').tooltip();

			var slider1 = new MasterSlider();
			slider1.control('arrows');
			slider1.setup('masterslider1' , {width: 1000,height: 650,space:5,layout: 'fillwidth',autoplay: true,arrows: true,loop: true});
